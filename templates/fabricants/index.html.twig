{% extends 'base.html.twig' %}

{% block title %}Fabricants index{% endblock %}

{% block body %}
    <h1>Fabricants index</h1>
    <div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fabricant in fabricants %}
            <tr>
                <td>{{ fabricant.id }}</td>
                <td>{{ fabricant.libelle }}</td>
                <td>{{ fabricant.logo }}</td>
                <td>
                    <div class="d-flex align-content-start flex-wrap">
                        <a class="btn btn-success mr-1"  href="{{ path('fabricants_show', {'id': fabricant.id}) }}">Afficher</a>
                        <a class="btn btn-primary mr-1" href="{{ path('fabricants_edit', {'id': fabricant.id}) }}">Modifier</a>
                        {{ include('fabricants/_delete_form.html.twig') }}
                    </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('fabricants_new') }}">Ajouter un fabricant</a>
    </div>

{% endblock %}
